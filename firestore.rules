rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
		match /users/{user} {
    allow read: if true
    allow write: if request.auth.uid == user
      match /Projects/{projects} {
        function isUserAdmin() {
            return get(get(/databases/$(database)/documents/users/$(user)/Projects/$(projects)).data.owner).data.id == request.auth.uid ||
        		 get(/databases/$(database)/documents/users/$(user)/Projects/$(projects)).data.anyoneEdit == true
         }

				allow read: if true;
        allow create: if request.auth.uid != null
        allow write: if isUserAdmin();
 
      	match /lists/{listDoc} {
          allow write: if isUserAdmin();
          allow read: if true;
	   		}
      }
    }
  }
}